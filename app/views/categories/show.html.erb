<%- model_class = Category -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.titleize %>
    <%= breadcrumbs(@category) %>
  </h1>
</div>

<% if user_signed_in? and current_user.has_role? :admin %>
  <dl class="dl-horizontal">
    <dt><strong>Path: </strong></dt>
    <dd><%= breadcrumbs(@category) %></dd>
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @category.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:parent_id) %>:</strong></dt>
    <dd><%= @category.parent_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:lft) %>:</strong></dt>
    <dd><%= @category.lft %></dd>
    <dt><strong><%= model_class.human_attribute_name(:rgt) %>:</strong></dt>
    <dd><%= @category.rgt %></dd>
    <dt><strong><%= model_class.human_attribute_name(:depth) %>:</strong></dt>
    <dd><%= @category.depth %></dd>
  </dl>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                categories_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_category_path(@category), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                category_path(@category),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
<% else %>
  <%= render :partial => '/products/client_view_index', :locals => { :products => @products } %>
<% end %>