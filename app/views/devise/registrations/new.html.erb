<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group"><%= f.label :email, :class => 'control-label' %><br />
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, :class => 'text_field' %></div>
  </div>

  <div class="control-group"><%= f.label :password, :class => 'control-label' %><br />
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %></div>
  </div>

  <div class="control-group"><%= f.label :password_confirmation, :class => 'control-label' %><br />
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %></div>
  </div>

  <%= render :partial => 'form', :locals => { :f => f } %>

  <div class="form-actions"><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
