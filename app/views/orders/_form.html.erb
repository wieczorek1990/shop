<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :address_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :address_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :value, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :delivery_cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :delivery_cost, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :delivery_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :delivery_id, Delivery.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_method_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :payment_method_id, PaymentMethod.all, :id, :name %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>
